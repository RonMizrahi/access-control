# Environment variables for Docker Compose
# Copy this file to .env and customize as needed

# Spring Boot Application
SPRING_PROFILES_ACTIVE=default
SPRING_DATASOURCE_URL=jdbc:h2:mem:testdb
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=password

# PostgreSQL Database (when using postgres profile)
POSTGRES_DB=springdb
POSTGRES_USER=spring
POSTGRES_PASSWORD=spring123

# Redis Cache
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# Kafka Messaging
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Zipkin Tracing
MANAGEMENT_ZIPKIN_TRACING_ENDPOINT=http://zipkin:9411/api/v2/spans

# JVM Options for development
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005
